---
import WorkLayout from "../../layouts/WorkLayout.astro";
import WorkPara from "../../components/WorkPara.astro";
import WorkItemWide from "../../components/WorkItemWide.astro";
import WorkGrid from "../../components/WorkGrid.astro";
import WorkItem from "../../components/WorkItem.astro";

import { getEntryBySlug } from "astro:content";

// Load markdown sections
const section1 = await getEntryBySlug("ourkidsclimate", "section1");
const section2 = await getEntryBySlug("ourkidsclimate", "section2");
const section3 = await getEntryBySlug("ourkidsclimate", "section3");
const section4 = await getEntryBySlug("ourkidsclimate", "section4");
const section5 = await getEntryBySlug("ourkidsclimate", "section5");

// Prepare compiled HTML for each section
const { Content: Section1Content } = await section1.render();
const { Content: Section2Content } = await section2.render();
const { Content: Section3Content } = await section3.render();
const { Content: Section4Content } = await section4.render();
const { Content: Section5Content } = await section5.render();
---

<WorkLayout title="Our Kids' Climate">

  <!-- Section 1 -->
  <WorkPara title={section1.data.title}>
    <Section1Content />
  </WorkPara>

  <WorkItemWide
    type="video"
    src="/images/ourkidsclimate/OKC-Endframe-Landscape.mp4"
  />

  <WorkGrid columns={2}>
    <WorkItem type="video" src="/images/ourkidsclimate/OKC-Power-of-Parents-Portrait.mp4" />
    <WorkItem type="image" src="/images/ourkidsclimate/OKC-Logo-Photo-1.avif" alt="Project" />
  </WorkGrid>

  <!-- Section 2 -->
  <WorkPara subtitle={section2.data.title}>
    <Section2Content />
  </WorkPara>

  <WorkItemWide type="video" src="/images/ourkidsclimate/OKC-Endframe-Landscape.mp4" />

  <WorkGrid columns={2}>
    <WorkItem type="video" src="/images/ourkidsclimate/OKC-Power-of-Parents-Portrait.mp4" />
    <WorkItem type="image" src="/images/ourkidsclimate/OKC-Logo-Photo-1.avif" alt="Project" />
  </WorkGrid>

  <WorkItemWide type="image" src="/images/ourkidsclimate/OKC-Logo-Sketch.jpg" alt="Sketch" />

  <!-- Section 3 -->
  <WorkPara subtitle={section3.data.title}>
    <Section3Content />
  </WorkPara>

  <WorkItemWide type="image" src="/images/ourkidsclimate/OKC-Logo-reverse.avif" alt="Reverse" />
  <WorkItemWide type="video" src="/images/ourkidsclimate/OKC-Logo-Placement-Landscape.mp4" />
  <WorkItemWide type="image" src="/images/ourkidsclimate/OKC-Tshirt-green_1.avif" alt="Merch" />

  <!-- Section 4 -->
  <WorkPara subtitle={section4.data.title}>
    <Section4Content />
  </WorkPara>

  <WorkItemWide type="image" src="/images/ourkidsclimate/OKC-Posters-Landscape.avif" alt="Posters" />

  <WorkGrid columns={2}>
    <WorkItem type="image" src="/images/ourkidsclimate/OKC-Tote-1-square.avif" alt="Tote 1" />
    <WorkItem type="image" src="/images/ourkidsclimate/OKC-Tote-2-square.avif" alt="Tote 2" />
  </WorkGrid>

  <WorkGrid columns={4}>
    <WorkItem type="image" src="/images/ourkidsclimate/9-OKC-Community-2.avif" alt="Community" />
    <WorkItem type="image" src="/images/ourkidsclimate/10-OKC-Fellowships-2.avif" alt="Fellowships" />
    <WorkItem type="image" src="/images/ourkidsclimate/11-OKC-Microgrants-2.avif" alt="Microgrants" />
    <WorkItem type="image" src="/images/ourkidsclimate/12-OKC-Campaigns-2.avif" alt="Campaigns" />
  </WorkGrid>

  <!-- Section 5 -->
  <WorkPara subtitle={section5.data.title}>
    <Section5Content />
  </WorkPara>

  <WorkItemWide type="image" src="/images/ourkidsclimate/OKC-Patterns.webp" alt="Patterns" />
  <WorkItemWide type="image" src="/images/ourkidsclimate/OKC-Pitch-Deck.avif" alt="Pitch Deck" />
  <WorkItemWide type="image" src="/images/ourkidsclimate/OKC-Guidelines.avif" alt="Guidelines" />

</WorkLayout>
