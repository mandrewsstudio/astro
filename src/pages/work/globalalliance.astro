---
// src/pages/global-alliance-green-new-deal.astro
import WorkLayout from "../../layouts/WorkLayout.astro";
import WorkPara from "../../components/WorkPara.astro";
import WorkItemWide from "../../components/WorkItemWide.astro";
import WorkGrid from "../../components/WorkGrid.astro";
import WorkItem from "../../components/WorkItem.astro";

import { getEntryBySlug } from "astro:content";

// Load markdown sections
const section1 = await getEntryBySlug("globalalliance", "section1");



// Prepare compiled HTML for each section
const { Content: Section1Content } = await section1.render();


---

<WorkLayout title="Global Alliance for a Green New Deal">
  <WorkPara title={section1.data.title}>
    <Section1Content />
  </WorkPara>

  <WorkItemWide
    type="image"
    src="/images/gagnd/GAGND-1.avif"
    alt="Global Alliance project"
  />

  <WorkGrid columns={2}>
    <WorkItem
      type="image"
      src="/images/gagnd/GAGND-2.avif"
      alt="Global Alliance project"
    />
    <WorkItem
      type="image"
      src="/images/gagnd/GAGND-3.avif"
      alt="Global Alliance project"
    />
  </WorkGrid>

  <WorkItemWide
    type="image"
    src="/images/gagnd/GAGND-4.avif"
    alt="Global Alliance project"
  />

  <WorkGrid columns={2}>
    <WorkItem
      type="image"
      src="/images/gagnd/GAGND-6.avif"
      alt="Global Alliance project"
    />
    <WorkItem
      type="image"
      src="/images/gagnd/GAGND-7.avif"
      alt="Global Alliance project"
    />
    <WorkItem
      type="image"
      src="/images/gagnd/GAGND-8.avif"
      alt="Global Alliance project"
    />
    <WorkItem
      type="image"
      src="/images/gagnd/GAGND-9.avif"
      alt="Global Alliance project"
    />
  </WorkGrid>

  <WorkItemWide
    type="image"
    src="/images/gagnd/GAGND-10.avif"
    alt="Global Alliance project"
  />
</WorkLayout>