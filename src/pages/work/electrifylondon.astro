---
// src/pages/our-kids-climate.astro
import WorkLayout from "../../layouts/WorkLayout.astro";
import WorkPara from "../../components/WorkPara.astro";
import WorkItemWide from "../../components/WorkItemWide.astro";
import WorkGrid from "../../components/WorkGrid.astro";
import WorkItem from "../../components/WorkItem.astro";
import { getEntryBySlug } from "astro:content";

// Load markdown sections
const section1 = await getEntryBySlug("electrify", "section1");
const section2 = await getEntryBySlug("electrify", "section2");
const section3 = await getEntryBySlug("electrify", "section3");


// Prepare compiled HTML for each section
const { Content: Section1Content } = await section1.render();
const { Content: Section2Content } = await section2.render();
const { Content: Section3Content } = await section3.render();

---

<WorkLayout title="Electrify London">
  <WorkPara title={section1.data.title}>
   <Section1Content />
  </WorkPara>

  <WorkItemWide
    type="image"
    src="/images/electrify/Electrify-1-Leaflet.avif"
  />

  <WorkGrid columns={2}>
    <WorkItem
      type="image"
      src="/images/electrify/Electrify-9-Poster.avif"
    />
    <WorkItem
      type="image"
      src="/images/electrify/Electrify-3-Event.avif"
      alt="Project"
    />
  </WorkGrid>

  <WorkPara subtitle={section2.data.title}>
    <Section2Content />
  </WorkPara>

  <WorkItemWide
    type="image"
    src="/images/electrify/Electrify-4-Mood.avif"
    alt="Sketch"
  />

  <WorkItemWide
    type="video"
    src="/images/electrify/Electrify-5-EVs-sequence.mp4"
    alt="Sketch"
  />
  <WorkGrid columns={2}>
    <WorkItem
      type="video"
      src="/images/electrify/Electrify-6-Poster.mp4"
    />
    <WorkItem
      type="image"
      src="/images/electrify/Electrify-7-Lanyard.avif"
      alt="Project"
    />
  </WorkGrid>
   <WorkItemWide
    type="image"
      src="/images/electrify/Electrify-Info-.avif"
    alt="Electrify infographic"
  />

  <WorkPara subtitle={section3.data.title}>
    <Section3Content />
  </WorkPara>

  <WorkItemWide
    type="image"
      src="/images/electrify/Electrify-8-Leaflet.avif"
    alt="Reverse"
  />
  <WorkItemWide
    type="image"
      src="/images/electrify/Electrify-Info-3.avif"
    alt="Electrify infographic 3"
  />

   <WorkGrid columns={2}>
    <WorkItem
      type="image"
      src="/images/electrify/Electrify-9-Poster.avif"
    />
    <WorkItem
      type="image"
      src="/images/electrify/Electrify-10-Photo.avif"
      alt="Project"
    />
  </WorkGrid>

 <WorkItemWide
    type="image"
      src="/images/electrify/Electrify-Info-2.avif"
    alt="Electrify infographic 2"
  />
  <WorkItemWide
    type="image"
      src="/images/electrify/Electrify-11-Panel.avif"
    alt="Merch"
  />

  
</WorkLayout>
