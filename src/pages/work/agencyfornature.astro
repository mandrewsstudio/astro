---
// src/pages/agency-for-nature.astro
import WorkLayout from "../../layouts/WorkLayout.astro";
import WorkPara from "../../components/WorkPara.astro";
import WorkItemWide from "../../components/WorkItemWide.astro";
import WorkGrid from "../../components/WorkGrid.astro";
import WorkItem from "../../components/WorkItem.astro";
import { getEntryBySlug } from "astro:content";

// Load markdown sections
const section1 = await getEntryBySlug("agencyfornature", "section1");



// Prepare compiled HTML for each section
const { Content: Section1Content } = await section1.render();


---

<WorkLayout title="Agency for Nature">
  <WorkPara title={section1.data.title}>
    <Section1Content />
  </WorkPara>

  <WorkItemWide
    type="image"
    src="/images/agencyfornature/Agency-for-Nature-1.avif"
    alt="Agency for Nature project"
  />

  <WorkGrid columns={2}>
    <WorkItem
      type="image"
      src="/images/agencyfornature/Agency-for-Nature-2.avif"
      alt="Agency for Nature project"
    />
    <WorkItem
      type="image"
      src="/images/agencyfornature/Agency-for-Nature-3.avif"
      alt="Agency for Nature project"
    />
  </WorkGrid>

  <WorkItemWide
    type="image"
    src="/images/agencyfornature/Agency-for-Nature-4.avif"
    alt="Agency for Nature project"
  />

  <WorkGrid columns={2}>
    <WorkItem
      type="image"
      src="/images/agencyfornature/Agency-for-Nature-6.avif"
      alt="Agency for Nature project"
    />
    <WorkItem
      type="image"
      src="/images/agencyfornature/Agency-for-Nature-7.avif"
      alt="Agency for Nature project"
    />
    <WorkItem
      type="image"
      src="/images/agencyfornature/Agency-for-Nature-8.avif"
      alt="Agency for Nature project"
    />
    <WorkItem
      type="image"
      src="/images/agencyfornature/Agency-for-Nature-9.avif"
      alt="Agency for Nature project"
    />
  </WorkGrid>

  <WorkItemWide
    type="image"
    src="/images/agencyfornature/Agency-for-Nature-10.avif"
    alt="Agency for Nature project"
  />
</WorkLayout>