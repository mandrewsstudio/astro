---
export interface Props {
  columns?: number;
}

const { columns = 2 } = Astro.props;
---

<div class={`work-grid work-grid-${columns}`}>
  <slot />
</div>

<style>
  .work-grid {
    display: grid;
    gap: 12px;
  }
  
  .work-grid-2 { grid-template-columns: 1fr 1fr; }
  .work-grid-3 { grid-template-columns: repeat(3, 1fr); }
  .work-grid-4 { grid-template-columns: repeat(4, 1fr); }
  
  @media (max-width: 768px) {
    .work-grid-2, .work-grid-3, .work-grid-4 {
      grid-template-columns: 1fr;
    }
  }
</style>